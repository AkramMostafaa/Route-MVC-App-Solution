@model SignInViewModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}



<div class="main-agileinfo">
	<div class="agileits-top">
		<form  asp-action="SignIn" method="post">
			<div asp-validation-summary="All"></div>
	
			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RemeberMe" class="checkbox">
					<span>Remeber Me ?</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" asp-action="SignIn" formmethod="post"  value="SIGNIN">
		</form>
		<p>Don't have an Account? <a asp-action="SignUp"> Register Now!</a></p>
		<p> <a asp-action="ForgetPassword"> Forget Password ?</a></p>
	</div>
</div>

@section ValidationScriptSection {
	<Partial name="_ValidationScriptsPartial" />
}